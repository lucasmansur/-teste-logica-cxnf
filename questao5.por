programa  
{  
    funcao inicio()  
    {  
        inteiro dia, mes, ano, anototal, result
        
        escreva("Digite dias de vida: ")
        leia(dia)
        escreva("Digite meses de vida: ")
        leia(mes)
        escreva("Digite anos de vida: ")
        leia(ano) 
        
        anototal = 2021-ano
        
        result = dia + (mes*30) + (anototal * 365)
        
        escreva("dias vividos: ",result)
        
        
        
        
    }  
} 